post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      if target.name == "React"
        if config.name == "ReleaseDevApp"
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << "DEBUG=1"
        end
      end
    end
  end

  installer.pods_project.targets.each do |target|
    if target.name == 'React'
        source_files = target.source_build_phase.files
        offending_files = source_files.find_all do |file|
            puts "File: #{file.file_ref.display_name}"
            file.file_ref.display_name.match /^RCTWebView/
        end
        offending_files.each do |file|
          puts "Deleting source file #{file.inspect} from target #{target.inspect}."
          source_files.delete file
        end
    end
  end
end
